---
name: log-cache-gateway

templates:
  ctl: bin/ctl
  environment.sh.erb: bin/environment.sh

packages:
- log-cache-gateway

provides:
- name: log-cache-gateway
  type: log-cache-gateway
  properties:
  - gateway_port

consumes:
- name: log-cache
  type: log-cache
- name: log-cache-group-reader
  type: log-cache-group-reader

properties:
  gateway_port:
    description: "The port for the log-cache-gateway to listen on"
    default: 8081
