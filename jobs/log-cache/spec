---
name: log-cache

templates:
  ctl: bin/ctl
  environment.sh.erb: bin/environment.sh

packages:
- log-cache

provides:
- name: log-cache
  type: log-cache
  properties:
  - port

consumes:
- name: log-cache
  type: log-cache

properties:
  port:
    description: "The port for the log-cache to listen on"
    default: 8080

  store_size:
    description: "The number of envelopes to store in memory"
    default: 1000000
  health_port:
    description: "The port for LogCache to bind a health endpoint"
    default: 6060
